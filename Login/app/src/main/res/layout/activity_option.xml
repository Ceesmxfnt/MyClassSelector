<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mixfinity.cees.login.OptionActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/header_check"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <RelativeLayout
        android:layout_width="24dp"
        android:layout_height="10dp"
        android:background="@drawable/menu_button"
        android:layout_marginRight="34dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        android:layout_marginEnd="24dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="315dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/apple"
        android:layout_marginRight="47dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="47dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="47dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintTop_toTopOf="@+id/guideline8"
        android:layout_marginTop="44dp"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="47dp" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:background="@drawable/login_button"
        android:paddingTop="3dp"
        android:text="@string/ColorButton"
        android:textColor="@color/colorPrimaryFontBtn"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="@+id/guideline7"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/guideline5"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp" />


    <Button
        android:id="@+id/log_out_button"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:background="@drawable/black_button"
        android:paddingTop="3dp"
        android:text="@string/ProcentButton"
        android:textColor="@color/colorSecondaryFontBtn"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="@+id/guideline7"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline5"
        android:layout_marginStart="24dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="192dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75"
        tools:layout_editor_absoluteY="426dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline8"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.14"
        tools:layout_editor_absoluteY="80dp"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/profileButton"
        android:layout_width="50dp"
        android:layout_height="57dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/com_facebook_profile_picture_blank_portrait"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
