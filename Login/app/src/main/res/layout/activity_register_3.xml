<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/guideline_reg_3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <TextView
            android:id="@+id/reg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/reg_title"
            android:textColor="#FFF"
            android:textSize="30dp" />
    </RelativeLayout>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline_reg_3"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <EditText
        android:background="@drawable/input"
        android:padding="10dp"
        android:textColorHint="@color/colorAccent"
        android:textColor="@color/colorSecondaryFontBtn"
        android:id="@+id/reg_input_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:hint="@string/reg_pass"
        android:inputType="textPassword"
        app:layout_constraintTop_toTopOf="@+id/guideline_reg_3"
        android:layout_marginTop="32dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:background="@drawable/input"
        android:padding="10dp"
        android:textColorHint="@color/colorAccent"
        android:textColor="@color/colorSecondaryFontBtn"
        android:id="@+id/reg_input_pass_conf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:hint="@string/reg_pass_confirm"
        android:inputType="textPassword"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/reg_input_pass" />

    <TextView
        android:id="@+id/reg_button_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reg_already"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/reg_input_pass_conf"
        app:layout_constraintRight_toRightOf="@+id/reg_input_pass"
        app:layout_constraintLeft_toLeftOf="@+id/reg_input_pass" />


    <android.support.constraint.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="192dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75"
        tools:layout_editor_absoluteY="426dp"
        tools:layout_editor_absoluteX="0dp" />


    <Button
        android:background="@drawable/login_button"
        android:textColor="@color/colorPrimaryFont"
        android:id="@+id/reg_button_sbm"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:paddingTop="3dp"
        android:text="@string/reg_sbm"
        app:layout_constraintTop_toTopOf="@+id/guideline7"
        app:layout_constraintLeft_toLeftOf="@+id/guideline5"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/back_button_p3"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:background="@drawable/black_button"
        android:paddingTop="3dp"
        android:text="@string/BackButton"
        android:textColor="@color/colorSecondaryFontBtn"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="@+id/guideline7"
        app:layout_constraintRight_toLeftOf="@+id/guideline5"
        android:layout_marginTop="8dp"
        android:layout_marginRight="24dp" />



</android.support.constraint.ConstraintLayout>